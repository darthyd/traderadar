{
  "name": "trade-radar-typescript",
  "version": "1.0.0",
  "description": "A simple, easy to use, and fast radar for traders.",
  "main": "dist/index.js",
  "author": "Lucas Oliveira <luaks.skt8@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "yarn build && electron .",
    "make": "yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "typescript": "^4.7.3"
  },
  "build": {
    "files": [
      "dist/**/*",
      "src/index.html",
      "package.json",
      "src/scripts/*",
      "src/styles/*"
    ],
    "directories": {
      "output": "out"
    }
  },
  "dependencies": {
    "copyfiles": "^2.4.1"
  }
}